<project name="Stratos Build Windows" basedir=".." default="build">

    <property name="output"  value="../Stratos_Build_Linux" />
    <property name="outZip"  value="../Stratos_Build_Linux.zip" />
	
	<target name="build">
		
		<copy todir="${output}/media">
			<fileset dir="media"/>
		</copy>

		<mkdir dir="${output}/saves"/>
		
    	<copy todir="${output}">
    		<fileset dir="libs"/>
    		<fileset file="resource/Stratos.sh"/>
   		</copy>
		
    	<jar destfile="${output}/stratos.jar" basedir="bin"/>
		
		<delete file="${outZip}" quiet="true" /> <!-- because zip tasks opens it for some reason, and fails if damaged -->
		<zip destfile="${outZip}">
			<zipfileset dir="${output}" filemode="755"/>
		</zip>
	</target>
</project>